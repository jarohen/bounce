{
    "configuration": {
        "appenders": {
            "Console": {
                "name":"Console",
                "target":"SYSTEM_OUT",
                "PatternLayout": {
                    "pattern":"%d [%t] %-5level %logger{36} - %msg%n"
                }
            }
        },

        "loggers": {
            "root": {
                "level":"info",
                "appender-ref": {
                    "ref":"Console"
                }
            },

            "logger": [
                {
                    "name":"{{name}}",
                    "level":"debug"
                }
            ]
        }
    }
}
